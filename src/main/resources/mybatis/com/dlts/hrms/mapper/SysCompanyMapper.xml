<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dlts.hrms.mapper.SysCompanyMapper">

  <sql id="Base_Column_List">
    id,name,code,parent_code
  </sql>
  
  <insert id="insert" parameterType="com.dlts.hrms.entity.SysCompany">
    insert into sys_area (id,name,code,parent_code) values (#{id},#{name},#{code},#{parent_code})
  </insert>
  
  <update id="updateSelective" parameterType="com.dlts.hrms.entity.SysCompany">
    update sys_company <set><if test="id != null">id = #{id},</if><if test="name != null">name = #{name},</if><if test="code != null">code = #{code},</if><if test="parentCode != null">parent_code = #{parentCode},</if></set> where id = #{id}
  </update>
  
  <update id="update" parameterType="com.dlts.hrms.entity.SysCompany">
    update sys_company set id=#{id},name=#{name},code=#{code},parent_code=#{parentCode} where id = #{id}
  </update>
  
  <delete id="delete" parameterType="java.lang.String">
    delete from sys_company where id = #{id}
  </delete>
  
  <delete id="deleteSelective" parameterType="com.dlts.hrms.entity.SysCompany">
    delete from sys_company  where 1=1 <if test="id!=null">and id=#{id}</if><if test="name!=null">and name=#{name}</if><if test="code!=null">and code=#{code}</if><if test="parentCode!=null">and parent_code=#{parentCode}</if>
  </delete>
  
  <select id="getById" parameterType="java.lang.String" resultType="com.dlts.hrms.entity.SysCompany">
    select <include refid="Base_Column_List" /> from sys_company where id = #{id}
  </select>
  
  <select id="get" parameterType="com.dlts.hrms.entity.SysCompany" resultType="com.dlts.hrms.entity.SysCompany">
    select <include refid="Base_Column_List" /> from sys_company  where 1=1 <if test="id!=null">and id=#{id}</if><if test="name!=null">and name=#{name}</if><if test="code!=null">and code=#{code}</if><if test="parentCode!=null">and parent_code=#{parentCode}</if>
  </select>
  
  <select id="select" parameterType="com.dlts.hrms.entity.SysCompany" resultType="com.dlts.hrms.entity.SysCompany">
    select <include refid="Base_Column_List" /> from sys_company  where 1=1 <if test="id!=null">and id=#{id}</if><if test="name!=null">and name=#{name}</if><if test="code!=null">and code=#{code}</if><if test="parentCode!=null">and parent_code=#{parentCode}</if>
  </select>
  
  <select id="count" parameterType="com.dlts.hrms.entity.SysCompany" resultType="java.lang.Integer">
    select count(1) from sys_company  where 1=1 <if test="id!=null">and id=#{id}</if><if test="name!=null">and name=#{name}</if><if test="code!=null">and code=#{code}</if><if test="parentCode!=null">and parent_code=#{parentCode}</if>
  </select>
  
  <!--gen-e-1-w-0-->
  <select id="pageCount" parameterType="map" resultType="java.lang.Integer">
    select count(1) from sys_company t where 1=1 
    <include refid="pageWhere"></include>
  </select>
  <select id="pageSelect" parameterType="map" resultType="com.dlts.hrms.po.CompanyPo">
    select t.*,(select name from sys_company a where a.code = t.parent_code) parentName
    from sys_company t where 1=1 
    <include refid="pageWhere"></include>
  </select>
  <sql id="pageWhere">
  	<if test="name!=null and name!=''">
    	and t.name LIKE CONCAT('%',#{name},'%')
    </if>
    <if test="code!=null and code!=''">
    	and t.code = #{code}
    </if>
  </sql>
  <!--gen-e-1-w-1-->
  
</mapper>