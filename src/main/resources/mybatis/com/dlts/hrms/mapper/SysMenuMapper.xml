  <delete id="deleteSelective" parameterType="com.dlts.hrms.entity.SysMenu">
    delete from sys_menu  where 1=1 <if test="id!=null">and id=#{id}</if><if test="parentId!=null">and parent_id=#{parentId}</if><if test="name!=null">and name=#{name}</if><if test="sort!=null">and sort=#{sort}</if><if test="href!=null">and href=#{href}</if><if test="icon!=null">and icon=#{icon}</if>
  </delete>
  
  <select id="getById" parameterType="java.lang.String" resultType="com.dlts.hrms.entity.SysMenu">
    select <include refid="Base_Column_List" /> from sys_menu where id = #{id}
  </select>
  
  <select id="get" parameterType="com.dlts.hrms.entity.SysMenu" resultType="com.dlts.hrms.entity.SysMenu">
