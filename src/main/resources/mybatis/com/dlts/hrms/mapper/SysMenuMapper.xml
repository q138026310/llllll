  </update>
  
  <update id="update" parameterType="com.dlts.hrms.entity.SysMenu">
    update sys_menu set id=#{id},parent_id=#{parentId},name=#{name},sort=#{sort},href=#{href},icon=#{icon} where id = #{id}
  </update>
  
  <delete id="delete" parameterType="java.lang.String">
