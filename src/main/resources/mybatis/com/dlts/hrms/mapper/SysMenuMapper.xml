  <insert id="insert" parameterType="com.dlts.hrms.entity.SysMenu">
    insert into sys_area (id,parent_id,name,sort,href,icon) values (#{id},#{parent_id},#{name},#{sort},#{href},#{icon})
  </insert>
  
  <update id="updateSelective" parameterType="com.dlts.hrms.entity.SysMenu">
