  </select>
  
  <select id="count" parameterType="com.dlts.hrms.entity.SysMenu" resultType="java.lang.Integer">
    select count(1) from sys_menu  where 1=1 <if test="id!=null">and id=#{id}</if><if test="parentId!=null">and parent_id=#{parentId}</if><if test="name!=null">and name=#{name}</if><if test="sort!=null">and sort=#{sort}</if><if test="href!=null">and href=#{href}</if><if test="icon!=null">and icon=#{icon}</if>
  </select>
  
  <!--gen-e-1-w-0-->
  <select id="findUserMenu" parameterType="map" resultType="com.dlts.hrms.entity.SysMenu">
    select m.* 
      from sys_user_role ur,sys_role_menu rm,sys_menu m
	  where ur.role_id = rm.role_id
	    and rm.menu_id = m.id
	    and ur.user_id = #{userId}
	    order by m.id
  </select>
